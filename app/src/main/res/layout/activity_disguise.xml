<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="br.com.estadovirtual.promulher.Disguise"
    android:padding="0dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/disguise_image"
            android:layout_gravity="left|top"
            android:scaleType="centerCrop"
            android:src="@drawable/disguise_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suba o primeiro degrau com fé. \n Não é necessário que você veja toda a escada. \n Apenas dê o primeiro passo."
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:clickable="false"
            android:fontFamily="Open Sans"
            android:lines="4"
            android:gravity="center_horizontal" />
    </FrameLayout>
</RelativeLayout>
